source 'https://rubygems.org'

gem 'awestruct', '~> 0.6.1'	# Framework for creating static HTML sites
gem 'uglifier', '~> 2.5.3'	# Ruby wrapper for UglifyJS JavaScript compressor
gem 'cssminify', '~> 1.0.2'	# CSS compression using YUI compressor
gem 'rb-fsevent', '>= 0.11.1'	# FSEvents API with Signals catching (without RubyCocoa)
gem "kramdown", ">= 2.4.0" # Kramdown works on all platforms, rdiscount only on mri
gem 'htmlcompressor', '~> 0.4.0' # Adds in HTML minification, helps remove the warning on awestruct startup
