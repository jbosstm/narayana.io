.navbar.navbar-inverse.navbar-fix#sticky-navbar
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#navbar-1")
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    .collapse.navbar-collapse#navbar-1
      %ul.nav.navbar-nav
        %li{:class=>"#{'active' if page.real_page.output_path.eql?('/index.html') }" }<
          %a(href="/") Home
        %li{:class=>"#{'active' if page.real_page.output_path.start_with?('/downloads')}"}<
          %a(href="/downloads") Downloads
        %li{:class=>"#{'active' if page.real_page.output_path.start_with?('/documentation') }" }<
          %a(href="/documentation") Documentation
        %li{:class=>"#{'active' if page.real_page.output_path.start_with?('/community') }" }<
          %a(href="/community") Community
        %li.dropdown
          %a.dropdown-toggle(href="#" data-toggle="dropdown")<
            = precede 'Source Code ' do
              %b.caret>
          %ul.dropdown-menu
            %li<
              %a(href="https://github.com/jbosstm") GitHub
            %li<
              %a(href="https://source.jboss.org/browse/narayana") FishEye
        %li<
          %a(href="https://issues.jboss.org/browse/JBTM") Issue Tracker
= breadcrumb(page.real_page.output_path)
